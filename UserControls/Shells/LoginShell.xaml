<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:WelldonePOS.UserControls.Misc" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             x:Class="WelldonePOS.UserControls.Shells.LoginShell"
             >
    <Border Style="{StaticResource bdrShells}">
        <DockPanel d:IsLocked="True">

            <TextBlock DockPanel.Dock="Bottom"
                       Style="{StaticResource tblLoginShell_1}"/>

            <Grid Style="{StaticResource grdLoginShell_1}">
                <uc:LoginBox/>
            </Grid>

        </DockPanel>
    </Border>
</UserControl>
